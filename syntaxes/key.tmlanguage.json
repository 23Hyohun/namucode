{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Namuwiki Code",
  "scopeName": "source.namu",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#links"
    },
    {
      "include": "#includes"
    },
    {
      "include": "#rubys"
    },
    {
      "include": "#anchors"
    },
    {
      "include": "#math"
    },
    {
      "include": "#macros"
    },
    {
      "include": "#titles"
    },
    {
      "include": "#markups"
    },
    {
      "include": "#lists"
    },
    {
      "include": "#brackets"
    },
    {
      "include": "#footnotes"
    },
    {
      "include": "#redirect"
    },
    {
      "include": "#tables"
    }
  ],
  "repository": {
    "comments": {
      "name": "comment.line.double-quote.namu",
      "match": "#{2,}.*"
    },
    "titles": {
      "name": "keyword.control.namu",
      "match": "^(={1,6})(#?) (.*) (\\2)(\\1)$"
    },
    "links": {
      "match": "\\[{2}([^|\\]\\[]*)((\\|)([^|\\]\\[]*))?\\]{2}",
      "captures": {
        "1": {
          "name": "string.quoted.double.namu"
        },
        "4": {
          "name": "support.constant.namu"
        }
      }
    },
    "includes": {
      "begin": "\\[(?=include)",
      "end": "\\]",
      "patterns": [
        {
          "name": "keyword.control.namu",
          "match": "include(?=\\(틀:)"
        },
        {
          "name": "variable.parameter.namu",
          "match": "틀:[^\\,|^\\)]*"
        },
        {
          "name": "variable.parameter.namu",
          "match": "(?<=,).[^,][^=]*(?=(=))"
        },
        {
          "name": "string.quoted.double.namu",
          "match": "(?<=\\=).[^,]*(?=(,|\\)))"
        }
      ]
    },
    "rubys": {
      "begin": "\\[(?=ruby)",
      "end": "\\]",
      "patterns": [
        {
          "name": "keyword.control.namu",
          "match": "ruby(?=\\()"
        },
        {
          "name": "string.quoted.double.namu",
          "match": "(?<=ruby\\().[^\\,]*(\\){1,})?(?=,)"
        },
        {
          "name": "variable.parameter.namu",
          "match": "(?<=\\,)[^\\=]*(?=\\=)"
        },
        {
          "name": "string.quoted.double.namu",
          "match": "(?<=ruby\\=)[^\\)\\]]*(\\){1,})?(?=\\)\\])"
        }
      ]
    },
    "anchors": {
      "match": "\\[((anchor|age|dday|youtube|kakaotv|niconicovideo|vimeo|navertv)\\(([^\\)]*(\\){1,})?)\\)|(pagecount)(\\(([^\\)]*(\\){1,})?)\\))?)\\]",
      "captures": {
        "2": {
          "name": "keyword.control.namu"
        },
        "3": {
          "name": "variable.parameter.namu"
        },
        "5": {
          "name": "keyword.control.namu"
        },
        "7": {
          "name": "variable.parameter.namu"
        }
      }
    },
    "math": {
      "match": "\\[((math)\\(([^\\)]*(\\){1,})?)\\))\\]",
      "captures": {
        "2": {
          "name": "keyword.control.namu"
        },
        "3": {
          "name": "variable.parameter.namu",
          "patterns": [
            {
              "include": "source.latex"
            }
          ]
        }
      }
    },
    "macros": {
      "begin": "\\[(?=clearfix|date|datetime|목차|tableofcontents|각주|footnote|br)",
      "end": "\\]",
      "patterns": [
        {
          "name": "keyword.control.namu",
          "match": "clearfix|date|datetime|목차|tableofcontents|각주|footnote|br"
        }
      ]
    },
    "markups": {
      "patterns": [
        {
          "name": "markup.bold.namu",
          "match": "'''[^']*'''"
        },
        {
          "name": "markup.italic.namu",
          "match": "(''[^']*''|__[^_]*__)"
        },
        {
          "name": "markup.deleted.namu",
          "match": "(~~[^~]*~~|--[^-]+--)"
        },
        {
          "name": "keyword.control.namu",
          "match": "-{4,9}"
        },
        {
          "name": "keyword.operator.namu",
          "match": "^(> ?){1,8}"
        },
        {
          "name": "keyword.control.namu",
          "match": "\\}{3}"
        },
        {
          "name": "keyword.control.namu",
          "match": "\\{{3}"
        },
        {
          "name": "keyword.control.namu",
          "match": "\\|{2}"
        }
      ]
    },
    "lists": {
      "patterns": [
        {
          "name": "keyword.operator.namu",
          "match": "(?<=^(> ?){0,8} ( )*)(\\*|1\\.|a\\.|A\\.|i\\.|I\\.(\\#[0-9][0-9]?)?)"
        }
      ]
    },
    "brackets": {
      "match": "((?<=\\{{3}))((\\+[0-9]|#[A-Fa-f0-9]{3,6}(\\,#[A-Fa-f0-9]{3,6})?)( )|((#!folding )(.*)|(#!wiki) (style)=(\"[^\"]*\")|(#!html) )|(#!syntax) (basic|cpp|csharp|css|erlang|go|java(script)?|json|kotlin|lisp|lua|markdown|objectivec|perl|php|powershell|python|ruby|rust|sh|sql|swift|typescript|xml))",
      "captures": {
        "1": {
          "name": "keyword.control.namu"
        },
        "3": {
          "name": "support.constant.namu"
        },
        "5": {
          "name": "keyword.control.namu"
        },
        "7": {
          "name": "support.constant.namu"
        },
        "8": {
          "name": "string.quoted.double.namu"
        },
        "9": {
          "name": "support.constant.namu"
        },
        "10": {
          "name": "variable.parameter.namu"
        },
        "11": {
          "name": "string.quoted.double.namu"
        },
        "12": {
          "name": "support.constant.namu"
        },
        "13": {
          "name": "support.constant.namu"
        },
        "14": {
          "name": "string.quoted.double.namu"
        }
      }
    },
    "footnotes": {
      "match": "\\[(\\*)",
      "captures": {
        "1": {
          "name": "keyword.operator.namu"
        }
      }
    },
    "redirect": {
      "match": "^(#redirect) (.*)",
      "captures": {
        "1": {
          "name": "keyword.control.namu"
        },
        "2": {
          "name": "string.quoted.double.namu"
        }
      }
    },
    "tables": {
      "match": "(?<=(\\|\\||\\>))\\<(.[^>|=]*)(\\=(.[^>|]*))?\\>",
      "captures": {
        "2": {
          "name": "variable.parameter.namu"
        },
        "4": {
          "name": "string.quoted.double.namu"
        }
      }
    }
  }
}
